= simple_form_for(@organization, url: @org_url, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.input :email
  = f.input :name
  = f.input :address
  = f.input :zip
  = f.input :city
  = f.input :organization_type, as: 'select', collection: Organization::TYPES, include_blank: false, :input_html => {:class=>'medium'}
  = f.input :organization_number
  = f.input :vat_number
  = f.input :bankgiro
  = f.input :postgiro
  = f.input :plusgiro
  = f.input :swift
  = f.input :iban

  - if can? :manage, current_organization
    .form-button-group
      .actions
        = f.submit class: 'btn btn-primary'
