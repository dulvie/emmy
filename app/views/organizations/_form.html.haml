= simple_form_for(@organization, url: @org_url, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.input :email
  = f.input :name
  = f.input :address
  = f.input :zip
  = f.input :city
  = f.input :vat_number
  = f.input :bankgiro
  = f.input :postgiro
  = f.input :plusgiro

  - if can? :manage, current_organization
    .form-button-group
      .actions
        = f.submit class: 'btn btn-primary'
