= simple_form_for(@vat, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.input :name
  = f.input :vat_percent
  - if !@vat.new_record?
    = f.input :add_factor, :input_html => {class: 'numeric', value: number_with_precision(f.object.add_factor, precision: 4)}, disabled: true
    = f.input :sub_factor, :input_html => {class: 'numeric', value: number_with_precision(f.object.sub_factor, precision: 4)}, disabled: true

  .form-button-group
    .actions
      = f.submit class: 'btn btn-primary'
