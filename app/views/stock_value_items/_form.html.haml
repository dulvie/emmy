= simple_form_for([@stock_value, @stock_value_item], wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.association :warehouse
  = f.association :batch
  = f.input :name
  = f.input :price
  = f.input :quantity
  = f.input :value, disabled: true

  - if @stock_value.can_edit?
    .form-button-group
      .actions
        = f.submit class: 'btn btn-primary'
