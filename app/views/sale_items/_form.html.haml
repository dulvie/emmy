= simple_form_for([@sale, @sale_item], wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification

  = f.association :batch,
    collection: @shelves,
    value_method: :batch_id,
    include_blank: false,
    input_html: {:ng_model =>'batch_id', :ng_change => 'select_batch()'}

  = f.input :quantity, :input_html => {:ng_model => 'quantity', :ng_change => 'select_quantity()'}
  = f.input :price

  .form-button-group
    .actions
      = f.submit class: 'btn btn-primary'