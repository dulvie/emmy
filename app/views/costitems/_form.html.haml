= simple_form_for(@costitem, wrapper: :horizontal_form, html: {class: 'form-horizontal'}, url: @costitem_form_url) do |f|

  = f.error_notification

  = f.input :description
  = f.association :supplier
  = f.input :contact_name
  = f.input :contact_email
  = f.association :product
  = f.input :quantity
  = f.input :price
  = f.input :price_sum
  = f.input :vat_amount

  = f.submit class: 'btn btn-primary'
  = link_to 'Back', edit_polymorphic_path(@parent), class: 'btn btn-primary'