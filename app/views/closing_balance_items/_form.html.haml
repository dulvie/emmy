= render partial: 'shared/search_account', locals: {model: @closing_balance, account: 'closing_balance_item_account_id', description: 'closing_balance_item_description'}
= simple_form_for([@closing_balance, @closing_balance_item], wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.association :account, input_html: {readonly: 'true', class: 'numeric'}
  = f.input :description

  = f.input :debit
  = f.input :credit

  .form-button-group
    .actions
      = f.submit class: 'btn btn-primary'

:javascript

  $(document).ready(function() {

    $("#verificate_id").change(function() {
      set_account();
    });

    set_account();

    function set_account() {
      $("#closing_balance_item_account_id").val($('#verificate_id').val());
      $('#closing_balance_item_description').val($('#verificate_id option:selected').text());
    }
  });