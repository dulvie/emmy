%ul{:class => 'nav nav-tabs'}
  %li.active= link_to "Base information", "#organisation-form", {"data-toggle" => "tab"}
  %li= link_to "Contacts", "#contact-index", {"data-toggle" => "tab"}
  %li= link_to "Comments", "#comment-index", {"data-toggle" => "tab"}
.tab-content
  #organisation-form.tab-pane.active
    %br
    = render 'form'
  #contact-index.tab-pane
    = render partial: 'contacts/index', locals: {contacts: @organisation.contacts, parent: @organisation}
  #comment-index.tab-pane
    = render partial: 'comments/index', locals: {comments: @organisation.comments, parent: @organisation}
    
:javascript
  $(document).ready(function() {
 
  $('a[data-toggle="tab"]').on("click", function(e) {
   localStorage.setItem('lastTab', $(e.target).attr("href").substr(1));
  });

  var lastTab = localStorage.getItem('lastTab');
  if (lastTab) {
    $('ul.nav-tabs').children().removeClass('active');
    $('a[href=#'+ lastTab +']').parents('li:first').addClass('active');
    $('div.tab-content').children().removeClass('active');
    $('#'+lastTab).addClass('active');
  }
  });