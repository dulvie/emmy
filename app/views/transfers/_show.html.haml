= simple_form_for(@transfer, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.input :created_at, as: :string, disabled: true
  = f.simple_fields_for @transfer.batch do |p|
    = p.input :name, disabled: true
  = f.simple_fields_for @transfer.from_warehouse do |fw|
    .form-group
      .labels_width.control-label
        = fw.label :from_warehouse
      .fields_width
        = fw.input :name, disabled: true, label: false
  = f.simple_fields_for @transfer.to_warehouse do |tw|
    .form-group
      .labels_width.control-label
        = tw.label :to_warehouse
      .fields_width
        = tw.input :name, disabled: true, label: false
  = f.input :quantity, disabled: true
  = f.input :state, disabled: true

  = link_to 'Back', transfers_path, class: 'btn btn-primary'
