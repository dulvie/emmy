.container-fluid
  .btn.btn-group.col-sm-12
    = link_to "#{t(:create)} #{t(:customer)}", new_customer_path, class: 'btn btn-primary'
    .input-group.col-sm-2
      %input{:class=> 'form-control', :placeholder=>'Search'}
      .input-group-addon
        = link_to search_icon
  .panel.panel-default.well.col-sm-offset-2.col-sm-8
    .panel-body
      %table{:class => 'table table-striped table-condensed'}
        %thead
          %tr
            %th= t(:customer)
            %th= t(:city)
            %th
            %th
        %tbody
          - @customers.each do |customer|
            %tr
              %td= link_to customer.name, customer
              %td= customer.city
              %td= link_to settings_icon, edit_customer_path(customer)
              %td= link_to delete_icon, customer, method: :delete, data: { confirm: 'Are you Sure?' }
      = will_paginate @customers, renderer: BootstrapPagination::Rails