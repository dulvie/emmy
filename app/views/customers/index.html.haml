%h1 Customer list
%table{:class => 'table table-striped'}
  %thead
    %tr
      %th Customer
      %th
      %th
    %tbody
      - @customers.each do |customer|
        %tr
          %td= link_to(customer.name, customer)
          %td= link_to settings_icon, edit_customer_path(customer)
          %td= link_to delete_icon, customer, method: :delete, data: { confirm: 'Are you Sure?' }

= link_to 'Add new customer', new_customer_path, class: 'btn btn-default'
