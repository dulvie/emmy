%ul{:class => 'nav nav-tabs'}
  %li.active= link_to "Base information", "#customer-form", {"data-toggle" => "tab"}
  %li= link_to "Contacts", "#contact-index", {"data-toggle" => "tab"}
  %li= link_to "Comments", "#comment-index", {"data-toggle" => "tab"}
.tab-content
  #customer-form.tab-pane.active
    = render 'form'
  #contact-index.tab-pane
    = render partial: 'contacts/index', locals: {contacts: @customer.contacts, parent: @customer}
  #comment-index.tab-pane
    = render partial: 'comments/index', locals: {comments: @customer.comments, parent: @customer}