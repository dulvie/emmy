#brand
  %h2.title
    - if user_signed_in?
      %ul.pull-right.profile-menu
        %li.dropdown
          %a.dropdown-toggle{'href' => '#'}
            = user_icon
            = current_user.name
          %ul.dropdown-menu.dropdown-menu-right
            - if current_user.superadmin?
              %li=link_to t(:admin), admin_dashboard_path
            %li=link_to t(:profile), profile_path
            %li=link_to t(:sign_out), destroy_user_session_path, method: :delete
    = link_to 'Emmy', dashboard_path, class: 'brand-link'
  .current-organization
    - if current_organization
      = current_organization.name
#sidebar-menu.navbar
  %ul.nav.sidebar-nav
    - unless user_signed_in?
      %li= link_to t(:sign_in), new_user_session_path
    - else

      %li{'class' => "#{dropdown_class('general')}"}
        = dropdown_link t(:general)
        %ul.dropdown-menu
          = nav_link t(:organization_selector), organization_selector_path
          - if current_organization
            = nav_link t(:organization), organization_path
            = nav_link t(:users), users_path
            = nav_link t(:contacts), contacts_path
            - path_to_comment = comments_path
            = nav_link t(:comments), path_to_comment
            = nav_link t(:help), helps_show_help_path
      - if current_organization
        %li{'class' => "#{dropdown_class('logistics')}"}
          = dropdown_link t(:logistics)
          %ul.dropdown-menu
            = nav_link t(:warehouses), warehouses_path
            = nav_link t(:items), items_path
            = nav_link t(:batches), batches_path
            = nav_link t(:units), units_path
            = nav_link t(:vats), vats_path
            = nav_link t(:inventories), inventories_path
            = nav_link t(:stock_values), stock_values_path

        %li{'class' => "#{dropdown_class('purchase')}"}
          = dropdown_link t(:purchase)
          %ul.dropdown-menu
            = nav_link t(:suppliers), suppliers_path
            = nav_link t(:purchases), purchases_path
            = nav_link t(:imports), imports_path
            = nav_link t(:roasting), productions_path

        %li{'class' => "#{dropdown_class('transfers')}"}
          = dropdown_link t(:transfers)
          %ul.dropdown-menu
            = nav_link t(:manual_transactions), manuals_path
            = nav_link t(:transfers), transfers_path

        %li{'class' => "#{dropdown_class('sales')}"}
          = dropdown_link t(:sale)
          %ul.dropdown-menu
            = nav_link t(:customers), customers_path
            = nav_link t(:sales), sales_path

        %li{'class' => "#{dropdown_class('economics')}"}
          = dropdown_link t(:economics)
          %ul.dropdown-menu
            = nav_link t(:accounting_plans), accounting_plans_path
            = nav_link t(:tax_codes), tax_codes_path
            = nav_link t(:ink_codes), ink_codes_path
