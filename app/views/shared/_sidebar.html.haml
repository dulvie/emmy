%ul.nav.nav-sidebar.list-group{id: 'sidebar-menu'}
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{'href' => '#'}
        = t(:general)
        -#%b.caret
      %ul.dropdown-menu
        = nav_link t(:organization_selector), organization_selector_path
