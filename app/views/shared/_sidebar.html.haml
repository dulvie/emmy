            = nav_link t(:vat_periods), vat_periods_path
            = nav_link t(:wage_periods), wage_periods_path
            = nav_link t(:tax_returns), tax_returns_path

        %li{'class' => "#{dropdown_class('interchanges')}"}
          = dropdown_link t(:interchanges)
          %ul.dropdown-menu
            = nav_link t(:sie_imports), sie_imports_upload_path
