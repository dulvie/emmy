- select ||= nil
%div{ :id=>modalId, :class =>'modal fade'}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %h3{ :class=>"modal-title"}
          = title

      .modal-body
        = simple_form_for(model, url: form_path, method: :post) do |f|
          = hidden_field_tag 'return_path', return_path
          - if !select.nil? && collection && collection.size > 0
            = f.input select, as: :select, collection: collection, include_blank: false

          = submit_tag t(:confirm), class: 'btn btn-primary'
          = button_tag t(:back), type: 'reset', class: 'btn btn-danger reseter', 'data-dismiss'=> 'modal'
        &nbsp
      .modal-footer