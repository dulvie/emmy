= link_to "#{t(:create)} #{t(:conversion)}", new_conversion_path, class: 'btn btn-success'
= link_to "#{t(:clear)}", conversion_clear_path(0), class: 'btn btn-warning', method: 'delete'

.table-responsive
  %table{:class => 'table table-striped'}
    %thead
      %tr
        %th= t(:old_number)
        %th= t(:new_number)
        %th
        %th
    %tbody
      - @conversions.each do |conversion|
        %tr
          %td= conversion.old_number
          %td= conversion.new_number
          %td.numeric= link_to settings_icon, edit_conversion_path(conversion)
          %td.numeric= delete_modal conversion, nil, '#mdId'

  = paginate @conversions, :theme => 'twitter-bootstrap-3'

= render partial: 'shared/modal_deletes', locals: {modalId: 'mdId'}
