// Beware, here be logic!
.container.row
  %br
  - add_comment_url = new_comment_path({parent_id: parent.id, parent_type: parent.class.name})
  = link_to t(:add_comment), add_comment_url, class: 'btn btn-info'
  %table{:class => 'table table-striped'}
    %thead
      %tr
        %th= t(:created_at)
        %th= t(:text)
        %th
      %tbody
        - comments.each do |comment|
          %tr
            %td= link_to comment.created_at, comment
            %td= link_to comment.body, comment
            %td= delete_button_for comment
            