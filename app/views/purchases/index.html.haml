.container.row
  = link_to 'Create Purchase', new_purchase_path, class: 'btn btn-primary'
%br
%table{:class => 'table table-striped well'}
  %thead
    %tr
      %th= t(:description)
      %th= t(:ordered_at)
      %th= t(:supplier)
      %th{:style => "text-align:right"}
        = t(:total_amount)
      %th= t(:state)
      %th= t(:parent_type)
      %th= t(:parent_id)
      %th
      %th
    %tbody
      - @purchases.each do |purchase|
        %tr
          %td= purchase.description
          %td= purchase.ordered_at.nil? ? ' ': purchase.ordered_at.strftime("%Y-%m-%d") 
          %td= link_to purchase.supplier_name, purchase.supplier
          %td{:style => "text-align:right"}
            = as_sek(purchase.items_total)
          %td
            - purchase.states.each do |s|
              = s
          %td= purchase.parent_type
          %td= purchase.parent_id
          %td= link_to settings_icon, purchase
          %td= delete_button_for purchase
