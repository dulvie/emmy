%div
  = simple_form_for(@simplified_sale, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
    = f.error_notification

    = f.input :import_bank_file_row_id, as: :hidden
    = f.input :posting_date, as: :string, input_html: {value: f.object.posting_date, class: 'date'}
    = f.input :warehouse_id, as: :select,  collection: @warehouses, include_blank: false
    = f.input :customer_id, as: :select, collection: @customers, include_blank: false
    = f.input :contact_name
    = f.input :our_reference_id, as: :select, collection: @users, include_blank: false
    = f.input :invoice_text, as: :select, collection: @invoice_text, include_blank: false
    = f.input :result_unit_id, as: :select, collection: @result_units, include_blank: false

    = f.input :name
    = f.input :price, input_html: {class: 'numeric'}

    .form-button-group
      .actions
        = f.submit class: 'btn btn-primary'
