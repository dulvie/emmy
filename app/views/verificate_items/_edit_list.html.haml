= simple_form_for @verificate, :html => { :class => 'form-horizontal' } do |f|
  .table-responsive
    %table{:class => 'table table-striped'}
      %thead
        %tr
          %th.numeric4= 'Id'
          %th= t(:account)
          %th= t(:description)
          %th.numeric6= t(:debit)
          %th.numeric6= t(:credit)
          %th
      %tbody
        - @verificate.verificate_items.each do |item|
          %tr
          = f.simple_fields_for item do |i|
            %td.numeric4= i.object.id
            %td.numeric4= i.object.account
            %td= i.object.description
            %td.numeric6= i.input_field :debit, type: 'text'
            %td.numeric6= i.input_field :credit, type: 'text'
            %td

        %tr
          %td.numeric4
          %td
          %td
            = t(:total)
          %td.numeric
            = @verificate.total_debit
          %td.numeric
            = @verificate.total_credit
          %td