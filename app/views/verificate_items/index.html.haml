.btn-group
  = link_to "#{t(:create)} #{t(:verificate_item)}", new_verificate_item_path, class: 'btn btn-success'

.table-responsive{:ng_controller=>'ModalCtrl'}
  %table{:class => 'table table-striped'}
    %thead
      %tr
        %th= t(:account)
        %th= t(:description)
        %th= t(:debet)
        %th= t(:kredit)
        %th
        %th
    %tbody{}
      - @verificate_items.each do |verificate_item|
        %tr
          %td= verificate_item.account
          %td= verificate_item.description
          %td= verificate_item.debet
          %td= verificate_item.kredit
          %td.numeric= link_to settings_icon, verificate_item_path(verificate_item)
          %td.numeric= delete_modal_for verificate_item

  = paginate @verificate_items, :theme => 'twitter-bootstrap-3'
  = render partial: 'shared/modal_delete', locals: {idx: 'deleteContent'}
