= simple_form_for(@document, wrapper: :horizontal_form, :html => {:class => 'form-horizontal', :multipart => true}, url: @document_form_url) do |f|
  = f.error_notification

  = f.input :name

  - if @document.upload?
    = f.input :upload_file_name, disabled: true
    = f.input :upload_file_size, disabled: true
    = f.input :upload_content_type, disabled: true, :input_html => {:class => 'medium'}
    .form-group
      .labels_width.control-label
        = f.label t(:show)
      .fields_width
        .form-control-text
          = link_to @document.name, @document.upload.url, target: '_blank'
  - else
    = f.input :upload, wrapper: :horizontal_file_input

    .form-button-group
      .actions
        = f.submit class: 'btn btn-primary'
