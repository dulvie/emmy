<h1>Ändra rättigheter för <%= @user.name %></h1>

<%= simple_form_for(@user, :url => edit_roles_user_path(@user), :method => :patch, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :roles, :as => :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
