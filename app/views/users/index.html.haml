= link_to 'New User', new_user_path, class: 'btn btn-primary'

%table{:class => 'table table-striped'}
  %thead
    %tr
      %th= t(:user)
      %th= t(:email)
      %th
      %th
    %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= link_to settings_icon, user_path(user)
        %td= delete_button_for user

= paginate @users, :theme => 'twitter-bootstrap-3'
