%ul{:class => 'nav nav-tabs'}
  %li.active= link_to "Base information", "#import-form", {"data-toggle" => "tab"}
  %li= link_to "Comments", "#comment-index", {"data-toggle" => "tab"}
.tab-content
  #import-form.tab-pane.active
    %br
    = render partial: 'form'
    - add_costitem_url = new_costitem_path({parent_id: @import.id, parent_type: @import.class.name})
    = link_to t(:add_costitem), add_costitem_url, class: 'btn btn-primary'
    = link_to 'Back', imports_path, class: 'btn btn-primary'
    = render partial: 'costitems/index' , locals: {costitems: @import.costitems, parent: @import}
  #comment-index.tab-pane
    = render partial: 'comments/index', locals: {comments: @import.comments, parent: @import}