= simple_form_for(@sie_import,
                  wrapper: :horizontal_form,
                  :html => {class: 'form-horizontal', multipart: true}) do |f|
  = f.error_notification
  = f.input :accounting_period_id, as: :select, collection: @accounting_periods, include_blank: false
  = f.input :sie_type, as: :select, collection: SieImport::SIE_TYPES, include_blank: false
  = f.input :upload, wrapper: :horizontal_file_input, accept: 'text/plain'

  .form-button-group
    .actions
      = f.submit class: 'btn btn-primary'
      = link_to "#{t(:conversions)}", conversions_path, class: 'btn btn-success'