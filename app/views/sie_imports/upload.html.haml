= simple_form_for(@sie_import, wrapper: :horizontal_form, :html => {:class => 'form-horizontal', :multipart => true}, url: sie_imports_create_from_upload_path, method: :post) do |f|
  = f.error_notification
  = f.input :accounting_period, as: :select, collection: @accounting_periods, include_blank: false
  = f.input :import_type, as: :select, collection: ['IB', 'UB', 'Transactions'], include_blank: false
  = f.input :upload, wrapper: :horizontal_file_input, accept: 'text/csv'

  .form-button-group
    .actions
      = f.submit class: 'btn btn-primary'
      = link_to "#{t(:conversions)}", conversions_path, class: 'btn btn-success'