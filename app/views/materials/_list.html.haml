%table{:class => 'table table-striped'}
  %thead
    %tr
      %th= t(:batch)
      %th{:style => "text-align:right"}
        = t(:quantity)
      %th
    %tbody
      - materials.each do |item|
        %tr
          %td= item.batch.name
          %td{:style => "text-align:right"}
            = item.quantity 
          %td= delete_button_for item, production_material_path(@production, item)
