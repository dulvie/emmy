= simple_form_for(@manual, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
  = f.error_notification
  = f.input :warehouse_id, as: :select, collection: Warehouse.all, disabled: !@manual.new_record?
  = f.input :product_id, as: :select, collection: Product.all, disabled: !@manual.new_record?
  = f.input :quantity, disabled: !@manual.new_record?
  - if @manual.new_record?
    = simple_fields_for :comments do |c|
      .form-group
        .col-sm-3.col-md-2.control-label
          = c.label t(:comment)
        .col-sm-9.col-md-10
          = c.input :body, as: :text, label: false, :class => 'form-control'
  - if @manual.new_record?
    = f.submit class: 'btn btn-primary'
  = link_to 'Back', manuals_path, class: 'btn btn-primary'
