%div{ng_controller: 'ink_code_headers_form_ctrl'}
  = simple_form_for(@ink_code_header, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f|
    = f.error_notification
    = f.input :name
    .form-group.form-inline
      .labels_width.control-label
        = f.label :file_name
      .fields_width
        = f.input :file_name, as: :select, collection: @files, include_blank: false, label: false
        = info_modal_for('file')
    = f.input :run_type, as: :select, collection: @file_importer.types, include_blank: false, input_html: {class: 'medium'}
    = f.association :accounting_plan, as: :select, collection: @accounting_plans, include_blank: false

    .form-button-group
      .actions
        = f.submit class: 'btn btn-primary'

    = render partial: 'shared/modal_info', locals: {idx: 'infoContent'}
    = render partial: 'info'
