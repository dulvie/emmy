.btn-group
  = link_to "#{t(:create)} #{t(:unit)}", new_unit_path, class: 'btn btn-success'

.table-responsive
  %table{:class => 'table table-striped'}
    %thead
      %tr
        %th= t(:name)
        %th= t(:weight)
        %th= t(:package_dimensions)
        %th
        %th
    %tbody
      - @units.each do |unit|
        %tr
          %td= unit.name
          %td= unit.weight
          %td= unit.package_dimensions
          %td= link_to settings_icon, edit_unit_path(unit)
          %td= delete_modal unit, nil, '#mdId'

  = paginate @units, :theme => 'twitter-bootstrap-3'

= render partial: 'shared/modal_deletes', locals: {modalId: 'mdId'}