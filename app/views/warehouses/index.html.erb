<h1>Lagerlista</h1>

<table class="table table-border">
  <thead>
    <tr>
      <th>Namn</th>
      <th>Adress</th>
      <th>Postnr</th>
      <th>Stad</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.name %></td>
        <td><%= warehouse.address %></td>
        <td><%= warehouse.zip %></td>
        <td><%= warehouse.city %></td>
        <td><%= link_to 'visa', warehouse %></td>
        <td><%= link_to 'ändra', edit_warehouse_path(warehouse) %></td>
        <td><%= link_to 'ta bort', warehouse, method: :delete, data: { confirm: 'är du säker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nytt Lager', new_warehouse_path, :class => "btn" %>
