.btn-group
  = link_to "#{t(:create)} #{t(:warehouse)}", new_warehouse_path, class: 'btn btn-success'

.table-responsive
  %table{:class => 'table table-striped'}
    %thead
      %tr
        %th= t(:name)
        %th= t(:address)
        %th= t(:zip)
        %th= t(:city)
        %th
        %th
      %tbody
      - @warehouses.each do |warehouse|
        %tr
          %td= warehouse.name
          %td= warehouse.address
          %td= warehouse.zip
          %td= warehouse.city
          %td= link_to settings_icon, edit_warehouse_path(warehouse)
          %td= delete_modal warehouse, nil, '#mdId'


  = paginate @warehouses, :theme => 'twitter-bootstrap-3'

= render partial: 'shared/modal_deletes', locals: {modalId: 'mdId'}
