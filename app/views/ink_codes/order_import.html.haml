%div{ng_controller: 'ink_code_form_ctrl'}
  = simple_form_for(@file_importer, wrapper: :horizontal_form, html: {class: 'form-horizontal'}, url: ink_code_import_path) do |f|

    .form-group.form-inline
      .labels_width.control-label
        = f.label :file
      .info_fields_width
        = f.input :file, as: :select, collection: @files, include_blank: false, label: false
        = info_modal_for('file')

    = f.input :type, as: :select, collection: @file_importer.types, include_blank: false, input_html: {class: 'medium'}
    = f.input :accounting_plan, as: :select, collection: @accounting_plans, include_blank: false

    .form-button-group
      .actions
        = f.submit class: 'btn btn-primary'

    = render partial: 'shared/modal_info', locals: {idx: 'infoContent'}
    = render partial: 'info'
