= link_to 'Create Product', new_product_path, class: 'btn btn-primary'

%table{:class => 'table table-striped'}
  %thead
    %tr
      %th Name
      %th Reseller
      %th End customer
      %th
      %th
    %tbody
    - @products.each do |product|
      %tr
        %td= product.name 
        %td #{product.distributor_price} (ex vat)
        %td #{product.product_price} (ink vat)
        %td= link_to settings_icon, product_path(product) 
        %td= delete_button_for product
